# ============================================
# 魔搭社区智能答疑 Agent - 环境变量配置示例
# ============================================

# 通义千问 API 配置
# 获取方式: https://dashscope.aliyun.com/
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# Milvus 向量数据库配置
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Redis 缓存配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MySQL 数据库配置 (可选)
MYSQL_HOST=localhost
MYSQL_PORT=3309
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=modelscope_qa

# LangSmith 监控配置 (可选)
# 获取方式: https://smith.langchain.com/
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=modelscope-qa-agent

# 应用配置
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=False

# Agent 配置
MAX_CONVERSATION_TURNS=10
CONTEXT_WINDOW_SIZE=4000
DEFAULT_TEMPERATURE=0.3
DEFAULT_TOP_P=0.8

# 检索配置
RETRIEVAL_TOP_K=3
VECTOR_WEIGHT=0.6
BM25_WEIGHT=0.4
MIN_CONFIDENCE_SCORE=0.7

# 缓存配置
ENABLE_CACHE=True
CACHE_TTL=3600
